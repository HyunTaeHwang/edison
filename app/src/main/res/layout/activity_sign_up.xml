<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hwanghyuntae.myapplication.SignUpActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#b79c7b"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#00ffffff"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:id="@+id/iv_left"
                        android:background="@drawable/left"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="305dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:foregroundGravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                        android:text="Create Account"
                        android:id="@+id/textView"
                        android:textColor="#8bebebeb"
                        android:textStyle="normal"
                        android:textSize="22dp"
                        android:layout_gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/SignUpButton"
                        android:background="@drawable/check"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="10dp" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/Imagepath"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ImageButton"
                android:background="@drawable/camera"
                android:layout_gravity="center"
                android:layout_marginTop="40dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:layout_marginTop="-60dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@android:style/TextAppearance.DeviceDefault">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:id="@+id/imageView4"
                    android:background="@drawable/usergray"
                    android:layout_marginRight="16dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:ems="10"
                    android:id="@+id/editTextName"
                    android:textColor="#c6000000"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:allowUndo="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:id="@+id/imageView5"
                    android:background="@drawable/mail"
                    android:layout_marginRight="16dp" />

                <EditText
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="Email"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    android:textColor="#c6000000"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:text="Code 받기"
                    android:id="@+id/Getcode"
                    android:background="#baa081" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="코드 입력"
                    android:ems="10"
                    android:id="@+id/ConfirmText"
                    android:textColor="#c6000000"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:layout_weight="0.8" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:text="인증"
                    android:id="@+id/Confirm"
                    android:background="#baa081" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="305dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:id="@+id/imageView6"
                    android:background="@drawable/pwgray"
                    android:layout_marginRight="16dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:ems="10"
                    android:id="@+id/editTextPassword"
                    android:textColor="#c6000000"
                    android:layout_marginRight="10dp"
                    android:password="true"
                    android:textSize="16dp"
                    android:layout_weight="1.02"
                    android:visibility="visible" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButtonPass"
                    android:background="@android:drawable/ic_menu_view" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="School"
                    android:ems="10"
                    android:id="@+id/SchoolText"
                    android:textColor="#c6000000"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Position"
                android:ems="10"
                android:id="@+id/PositionText"
                android:textColor="#c6000000"
                android:layout_marginRight="10dp"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
